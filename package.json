{
	"name": "@epicdesignlabs/gatsby-source-bigcommerce",
	"version": "2.0.0-2",
	"description": "This official source plugin makes BigCommerce API data available in GatsbyJS sites. Currently in active development.",
	"scripts": {
		"autotest": "supervisor -q -n exit -x node_modules/.bin/_mocha --",
		"build": "babel ./src/ --out-dir ./ --source-maps",
		"exectests": "nyc ./node_modules/.bin/_mocha",
		"watch": "babel ./src/ --out-dir ./ --source-maps --watch",
		"lint:eslint": "eslint './src/**/*.js' --quiet --fix --color --ignore-path .gitignore",
		"lint:prettier": "prettier './src/**/*.js' --write --ignore-path .gitignore",
		"lint": "yarn lint:eslint && yarn lint:prettier",
		"prepare": "cross-env NODE_ENV=production yarn build",
		"release:major": "changelog -M && git add CHANGELOG.md && git commit -m 'updated CHANGELOG.md' && npm version major && git push origin && git push origin --tags",
		"release:minor": "changelog -m && git add CHANGELOG.md && git commit -m 'updated CHANGELOG.md' && npm version minor && git push origin && git push origin --tags",
		"release:patch": "changelog -p && git add CHANGELOG.md && git commit -m 'updated CHANGELOG.md' && npm version patch && git push origin && git push origin --tags",
		"test": "yarn exectests && yarn lint"
	},
	"homepage": "https://github.com/Epic-Design-Labs/gatsby-source-bigcommerce/blob/master/README.md",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Epic-Design-Labs/gatsby-source-bigcommerce.git"
	},
	"keywords": [
		"@epicdesignlabs",
		"api",
		"storefront",
		"bigcommerce",
		"gatsby-plugin",
		"gatsby-source-bigcommerce",
		"gatsby",
		"plugin",
		"source"
	],
	"author": {
		"name": "Epic Design Labs",
		"url": "https://epicdesignlabs.com",
		"email": "info@epicdesignlabs.com"
	},
	"contributors": [
		{
			"name": "Grant Glidewell",
			"url": "https://www.blogwell.io/"
		},
		{
			"name": "Eric Boggs",
			"email": "eric@mlemedia.com",
			"url": "http://etboggs.com"
		}
	],
	"license": "MIT",
	"main": "index.js",
	"dependencies": {
		"generate-changelog": "^1.8.0",
		"http-proxy-middleware": "^2.0.4",
		"lodash": "^4.17.21",
		"micro": "^9.3.4",
		"node-fetch": "2.6.7",
		"winston": "^3.7.2"
	},
	"peerDependencies": {
		"gatsby": ">3.0.0"
	},
	"devDependencies": {
		"@babel/cli": "^7.16.8",
		"@babel/core": "^7.16.12",
		"@babel/eslint-parser": "^7.16.5",
		"@babel/runtime": "^7.18.3",
		"agentkeepalive": "^4.2.1",
		"babel-preset-gatsby-package": "^2.14.0",
		"babel-preset-minify": "^0.5.2",
		"chai": "^4.3.6",
		"commitizen": "^4.2.4",
		"cross-env": "^7.0.3",
		"cz-conventional-changelog": "^3.3.0",
		"dataloader": "^2.1.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-babel": "^5.3.1",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-react": "^7.30.0",
		"eslint": "^8.16.0",
		"gatsby-core-utils": "^3.15.0",
		"gatsby": "^4.15.2",
		"husky": "^8.0.1",
		"lint-staged": "^13.0.0",
		"mocha": "^10.0.0",
		"nock": "^13.2.6",
		"nyc": "^15.1.0",
		"prettier": "^2.6.0",
		"react": "^18.0.0",
		"sinon": "^14.0.0",
		"supervisor": "^0.12.0"
	},
	"bugs": {
		"url": "https://github.com/Epic-Design-Labs/gatsby-source-bigcommerce/issues"
	},
	"directories": {
		"src": "src"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn lint-staged",
			"prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
			"commit": "cz"
		}
	},
	"lint-staged": {
		"**/*.js, **/*.json, **/*.md": [
			"yarn lint"
		]
	},
	"engines": {
		"node": ">=14.15.0"
	},
	"volta": {
		"node": "16.15.1",
		"yarn": "1.22.18"
	}
}
