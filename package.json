{
	"name": "@epicdesignlabs/gatsby-source-bigcommerce",
	"version": "2.0.0",
	"description": "This official source plugin makes BigCommerce API data available in GatsbyJS sites. Currently in active development.",
	"scripts": {
		"watch": "tsc-watch",
		"build": "tsc",
		"coverage": "codecov",
		"lint:eslint": "eslint './src/' --fix --color",
		"lint:prettier": "prettier './src/' --write",
		"lint": "yarn lint:eslint && yarn lint:prettier",
		"prepare": "cross-env NODE_ENV=production yarn build",
		"semantic-release": "semantic-release",
		"test:watch": "jest --watch",
		"test": "jest --coverage",
		"typecheck": "tsc --noEmit",
		"version": "auto-changelog -p && git add CHANGELOG.md"
	},
	"auto-changelog": {
		"output": "HISTORY.md",
		"template": "keepachangelog",
		"unreleased": true,
		"commitLimit": false
	},
	"homepage": "https://github.com/Epic-Design-Labs/gatsby-source-bigcommerce/#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Epic-Design-Labs/gatsby-source-bigcommerce.git"
	},
	"keywords": [
		"@epicdesignlabs",
		"api",
		"storefront",
		"bigcommerce",
		"gatsby-plugin",
		"gatsby-source-bigcommerce",
		"gatsby",
		"plugin",
		"source",
		"typescript",
		"vscode",
		"jest",
		"husky",
		"commitizen",
		"semantic-release",
		"codecov"
	],
	"author": {
		"name": "Epic Design Labs",
		"url": "https://epicdesignlabs.com",
		"email": "info@epicdesignlabs.com"
	},
	"contributors": [
		{
			"name": "Grant Glidewell",
			"url": "https://www.blogwell.io/"
		},
		{
			"name": "Eric Boggs",
			"email": "eric@mlemedia.com",
			"url": "http://etboggs.com"
		}
	],
	"license": "MIT",
	"main": "index.js",
	"dependencies": {
		"@babel/runtime": "^7.18.3",
		"axios": "^0.27.2",
		"conventional-changelog-conventionalcommits": "^5.0.0",
		"gatsby-core-utils": "^3.16.0",
		"gatsby-plugin-utils": "^3.10.0",
		"gatsby-source-filesystem": "^4.16.0",
		"http-proxy-middleware": "^2.0.4",
		"lodash": "^4.17.21",
		"micro": "^9.3.4"
	},
	"peerDependencies": {
		"gatsby": ">3.0.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.0.2",
		"@commitlint/config-conventional": "^17.0.2",
		"@types/jest": "^28.1.1",
		"@types/micro": "^7.3.7",
		"@types/node": "^18.0.1",
		"@types/sharp": "^0.30.4",
		"@typescript-eslint/eslint-plugin": "^5.28.0",
		"@typescript-eslint/parser": "^5.28.0",
		"agentkeepalive": "^4.2.1",
		"codecov": "^3.8.3",
		"commitizen": "^4.2.4",
		"cross-env": "^7.0.3",
		"cz-conventional-changelog": "^3.3.0",
		"dataloader": "^2.1.0",
		"eslint": "^8.17.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-react": "^7.30.0",
		"gatsby": "^4.15.2",
		"husky": "^8.0.1",
		"jest": "^28.1.1",
		"lint-staged": "^13.0.0",
		"prettier": "^2.6.2",
		"react": "^18.0.0",
		"semantic-release": "^19.0.2",
		"ts-jest": "^28.0.5",
		"ts-node": "^10.2.1",
		"tsc-watch": "^5.0.3",
		"typescript": "^4.7.3"
	},
	"bugs": {
		"url": "https://github.com/Epic-Design-Labs/gatsby-source-bigcommerce/issues"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
		}
	},
	"lint-staged": {
		"**/*.ts": "yarn lint"
	},
	"release": {
		"branches": [
			"main"
		],
		"plugins": [
			[
				"@semantic-release/commit-analyzer",
				{
					"preset": "conventionalcommits",
					"releaseRules": [
						{
							"type": "build",
							"scope": "deps",
							"release": "patch"
						}
					]
				}
			],
			[
				"@semantic-release/release-notes-generator",
				{
					"preset": "conventionalcommits",
					"presetConfig": {
						"types": [
							{
								"type": "feat",
								"section": "Features"
							},
							{
								"type": "fix",
								"section": "Bug Fixes"
							},
							{
								"type": "build",
								"section": "Dependencies and Other Build Updates",
								"hidden": false
							}
						]
					}
				}
			],
			"@semantic-release/npm",
			"@semantic-release/github"
		]
	},
	"engines": {
		"node": ">=14.15.0"
	},
	"volta": {
		"node": "16.15.1",
		"yarn": "1.22.18"
	}
}
