{
	"name": "@epicdesignlabs/gatsby-source-bigcommerce",
	"version": "2.0.0-2",
	"description": "This official source plugin makes BigCommerce API data available in GatsbyJS sites. Currently in active development.",
	"scripts": {
		"autotest": "supervisor -q -n exit -x node_modules/.bin/_mocha --",
		"build": "babel ./src/ --out-dir ./ --source-maps",
		"exectests": "nyc ./node_modules/.bin/_mocha",
		"watch": "babel ./src/ --out-dir ./ --source-maps --watch",
		"lint:eslint": "eslint './src/**/*.js' --quiet --fix --color --ignore-path .gitignore",
		"lint:prettier": "prettier './src/**/*.js' --write --ignore-path .gitignore",
		"lint": "yarn lint:eslint && yarn lint:prettier",
		"prepare": "husky install",
		"test": "yarn exectests && yarn lint",
		"release": "dotenv release-it -VV --"
	},
	"homepage": "https://github.com/Epic-Design-Labs/gatsby-source-bigcommerce/blob/master/README.md",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Epic-Design-Labs/gatsby-source-bigcommerce.git"
	},
	"keywords": [
		"@epicdesignlabs",
		"api",
		"big",
		"bigcommerce",
		"commerce",
		"gatsby-plugin",
		"gatsby-source-bigcommerce",
		"gatsby",
		"plugin",
		"source"
	],
	"author": {
		"name": "Epic Design Labs",
		"url": "https://epicdesignlabs.com",
		"email": "info@epicdesignlabs.com"
	},
	"contributors": [
		{
			"name": "Guy Romelle Magayano",
			"email": "guy@epicdesignlabs.com",
			"url": "https://guyromellemagayano.dev"
		},
		{
			"name": "Grant Glidewell",
			"url": "https://www.blogwell.io/"
		},
		{
			"name": "Eric Boggs",
			"email": "eric@mlemedia.com",
			"url": "http://etboggs.com"
		}
	],
	"license": "MIT",
	"main": "index.js",
	"dependencies": {
		"babel-preset-gatsby": "^2.10.1",
		"graphql-tag": "^2.12.6",
		"http-proxy-middleware": "^2.0.4",
		"micro": "^9.3.4",
		"winston": "^3.7.2"
	},
	"peerDependencies": {
		"gatsby": ">2.0.0"
	},
	"devDependencies": {
		"@babel/cli": "^7.16.8",
		"@babel/core": "^7.16.12",
		"@babel/eslint-parser": "^7.16.5",
		"@release-it/keep-a-changelog": "^2.5.0",
		"agentkeepalive": "^4.2.1",
		"babel-preset-gatsby-package": "^2.10.0",
		"chai": "^4.3.6",
		"commitizen": "^4.2.4",
		"cz-conventional-changelog": "^3.3.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-babel": "^5.3.1",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-react": "^7.29.4",
		"eslint": "^8.11.0",
		"husky": "^8.0.1",
		"lint-staged": "^12.3.7",
		"mocha": "^10.0.0",
		"nock": "^13.2.4",
		"nyc": "^15.1.0",
		"prettier": "^2.6.0",
		"react": "^18.0.0",
		"release-it": "^14.14.2",
		"sinon": "^14.0.0",
		"supervisor": "^0.12.0"
	},
	"bugs": {
		"url": "https://github.com/Epic-Design-Labs/gatsby-source-bigcommerce/issues"
	},
	"directories": {
		"src": "src",
		"tests": "tests"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn lint-staged",
			"prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
			"commit": "cz"
		}
	},
	"lint-staged": {
		"**/*.js": [
			"yarn lint"
		]
	},
	"release-it": {
		"git": {
			"commitMessage": "chore(release): ${release.version} [skip ci]\n\n${release.notes}",
			"requireCleanWorkingDir": true,
			"tagAnnotation": "Release v${version}",
			"tagName": "v${version}"
		},
		"github": {
			"draft": true,
			"release": true,
			"releaseName": "v${version}"
		},
		"npm": {
			"publish": true
		},
		"plugins": {
			"@release-it/keep-a-changelog": {
				"filename": "CHANGELOG.md"
			}
		},
		"hooks": {
			"after:git:release": "if [ \"${isPreRelease}\" != \"true\" ]; then git tag -f latest && git push -f origin latest; fi",
			"after:release": "echo Successfully created a release draft v${version} for ${repo.repository}. Please add release notes when necessary and publish it!",
			"before:init": "npm test"
		}
	}
}
